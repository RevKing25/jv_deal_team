<div class="container">
  <h1>All Users</h1>

   <!-- Search and Filter Form -->
  <div class="mb-4">
    <%= form_with url: users_path, method: :get, local: true, class: 'form-inline' do |form| %>
      <div class="row align-items-center">
        <div class="col-md-4">
          <%= form.label :search, "Search by Name", class: 'form-label mr-2' %>
          <%= form.text_field :search, value: params[:search], class: 'form-control', placeholder: "Enter name..." %>
        </div>
        <div class="col-md-3">
          <%= form.label :state, "Filter by State", class: 'form-label mr-2' %>
          <%= form.select :state, options_for_select([["All States", ""]] + Property::US_STATES, params[:state]), {}, class: 'form-select' %>
        </div>
        <div class="col-md-2">
          <%= form.submit "Search", class: "btn btn-primary mt-3" %>
        </div>
      </div>
    <% end %>

  <!-- Users List -->
  <% if @users.any? %>
    <table class="table table-striped">
      <thead>
        <tr>
          <th>Name</th>
          <th>Email</th>
          <th>Role</th>
          <th>States</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% @users.each do |user| %>
          <tr>
            <td><%= user.name %></td>
            <td><%= user.email %></td>
            <td><%= user.role&.capitalize || "N/A" %></td>
            <td><%= user.states.join(", ").presence || "N/A" %></td><!-- Or property state if applicable -->
            <td><%= link_to "View Profile", user_path(user), class: "btn btn-sm btn-outline-primary" %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  <% else %>
    <p>No users found.</p>
  <% end %>
</div>